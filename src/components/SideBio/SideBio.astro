---
import Image from "astro/components/Image.astro";
import Card from "../../layouts/Card.astro";

type SideBioProps = {
  theme?: "light" | "dark";
};
const { class: className, ...rest } = Astro.props;
---

<div class=`${className} shadow-card`>
  <Card>
    <div class="flex flex-col justify-center items-center gap-5">
      <Image src="/avatar.png" width={200} height={200} alt="Avatar" class="w-max-[200px]" />
      <div>
        <h1 class="text-2xl font-bold text-center tracking-wide font-compact text-brand-blue">Jatin Kukreja</h1>
        <p class="text-sm text-center tracking-wide font-sanss text-brand-blue">Senior Frontend Developer</p>
      </div>
      <ul class="flex gap-4">
        <li>
          <a href="">
            <img src="/icons/instagram.svg" alt="" />
          </a>
        </li>
        <li>
          <a href="">
            <img src="/icons/linkedin.svg" alt="" />
          </a>
        </li>
        <li>
          <a href="">
            <img src="/icons/github.svg" alt="" />
          </a>
        </li>
      </ul>
    </div>
  </Card>
</div>
