---
import Layout from "../layouts/Layout.astro";
import Card from "../layouts/Card.astro";
import SideBio from "../components/SideBio/SideBio.astro";
import AboutMe from "../components/AboutMe/AboutMe.astro";
import Experience from "../components/Experience/Experience.astro";
import Skills from "../components/Skills/Skills.astro";
import Education from "../components/Education/Education.astro";

import TimeZone from "../components/TimeZone/TimeZone.astro";
---

<script>
  console.log(window.location.search);
</script>

<Layout title="Welcome to Astro.">
  <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 w-full py-10 gap-4">
    <SideBio class="row-span-1 col-span-1 lg:row-span-2" />

    <AboutMe class="md:col-span-2" />

    <Skills class="col-span-1 lg:row-span-2" />
    <Education class="col-span-1" />
    <Experience class="col-span-1 md:row-span-2" />
    <TimeZone class="col-span-1 md:row-span-1" />
    <div style="box-shadow:1px 1px 14px -1px #f2f2f2" class="md:col-start-2 col-span-1 md:row-span-1">
      <Card title="Projects" />
    </div>

    <div class="col-span-1 md:col-start-2 lg:col-start-4 md:row-span-1">
      <Card title="CV">
        <button
          class=`w-full px-8 py-1 border-2 duration-300 border-transparent hover:border-white leading-8 bg-brand-accent rounded-full text-white`
          >Download CV</button
        >
      </Card>
    </div>
  </div>
</Layout>

<style>
  :root {
    --brand-primary: #0f2162;
    --brand-accent: #ff7f50;
  }
</style>
